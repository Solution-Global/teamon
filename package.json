{
  "name": "TeamON",
  "productName": "TeamON",
  "version": "0.1.0",
  "description": "Unified desktop app for team communications and collaborations.",
  "main": "script/app.js",
  "scripts": {
    "app": "electron .",
    "web": "node web/server.js",
    "clean": "npm run clean:win",
    "clean:win": "rm -rf release/win",
    "clean:osx": "rm -rf release/osx",
    "pack": "npm run pack:win",
    "pack:win": "npm run clean:win && electron-packager . teamon --out=release/win --platform=win32 --arch=x64 --version=0.37.3 --asar=true --asar-unpack=\"*.node\" --icon=assets/win/teamon.ico --prune --ignore=\"(assets|release)\" --ignore=.gitignore --ignore=packager.json --ignore=\"node_modules/.bin/(asar|electron.*)\" --ignore=logs --version-string.ProductName=TeamON --overwrite",
    "pack:osx": "npm run clean:osx && electron-packager . teamon --out=release/osx --platform=darwin --arch=x64 --version=0.36.8 --asar=true --asar-unpack=\"*.node\" --ignore=\"(assets|release)\" --ignore=.gitignore --ignore=packager.json --ignore='node_modules/.bin/(asar|electron.*)' --ignore=logs --overwrite",
    "build:osx": "npm run pack:osx && electron-builder release/osx/teamon-darwin-x64 --platform=osx --out=release/osx --config=packager.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Solution-Global/teamon.git"
  },
  "bugs": {
    "url": "https://github.com/Solution-Global/teamon/issues"
  },
  "author": "Solution-Global",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Solution-Global/teamon/issues"
  },
  "homepage": "https://github.com/Solution-Global/teamon#readme",
  "devDependencies": {
    "grunt": "^0.4.5",
    "grunt-browserify": "^4.0.1",
    "grunt-contrib-copy": "^0.8.2",
    "grunt-contrib-jshint": "0.11.3",
    "grunt-contrib-watch": "0.6.1",
    "asar": "0.9.0",
    "electron-builder": "2.6.0",
    "electron-packager": "5.1.1",
    "electron-prebuilt": "^0.37.2",
    "connect": "3.4.1",
    "connect-proxy-layer": "0.1.2",
    "serve-static": "1.10.2",
    "morgan": "1.7.0",
    "file-stream-rotator": "0.0.6",
    "grunt-electron-installer": "2.0.0"
  },
  "dependencies": {
    "bootstrap": "3.3.6",
    "dropzone": "^4.3.0",
    "jquery": "2.1.4",
    "jquery-ui": "1.10.5",
    "malihu-custom-scrollbar-plugin": "3.1.3",
    "mustache": "2.2.0",
    "node-notifier": "^4.5.0",
    "node-rest-client": "1.5.1",
    "app-root-path": "1.0.0",
    "lz-string": "1.4.4",
    "mqtt": "1.7.3",
    "moment": "2.12.0",
    "moment-timezone": "0.5.1",
    "font-awesome": ">=4.5.0",
    "autosize": "3.0.15",
    "ua-parser-js": "0.7.10"
  }
}
